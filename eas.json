{
  "cli": {
    "version": ">= 0.44.1",
    "appVersionSource": "remote",
    "requireCommit": true
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "channel": "preview",
      "env": { "APP_VARIANT": "preview" },
      "distribution": "internal"
    },
    "staging": {
      "env": { "APP_VARIANT": "staging" },
      "distribution": "internal"
    },
    "production": {
      "env": { "APP_VARIANT": "production" },
      "distribution": "store",
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
